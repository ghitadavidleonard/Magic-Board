        <Label Name="InfoLabel" Content="" Margin="189,10,165,584" FontFamily="Segoe UI Semibold" FontSize="14"/>
        <Canvas x:Name="theCanvas" HorizontalAlignment="Left" Height="526" Margin="189,88,0,0" VerticalAlignment="Top" Width="776" Grid.Column="2"/>
        <Button Height="40" Name="rollBtn" BorderThickness="0" Background="#0069D9"  FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Bottom" Margin="566,0,621,10" Click="rollBtn_Click" Cursor="Hand" Foreground="White" >Roll</Button>
    </Grid>
